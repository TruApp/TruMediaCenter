        <textcolor>grey</textcolor>
				<visible>VideoPlayer.Content(MusicVideos)</visible>
			</control>
			<control type="label" id="1">
				<description>LiveTV Info labelChannel</description>
				<posx>30</posx>
				<posy>50</posy>
				<width>900</width>
				<height>40</height>
				<align>left</align>
